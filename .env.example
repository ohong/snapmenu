# Neon Database Configuration
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Koyeb API Configuration
KOYEB_API_KEY=your_koyeb_api_key_here

# Mistral OCR Service Endpoint (deployed on Koyeb)
MISTRAL_OCR_ENDPOINT=https://your-mistral-app.koyeb.app/ocr

# FLUX.1 Image Generation Endpoint (deployed on Koyeb)  
FLUX_ENDPOINT=https://your-flux-app.koyeb.app/generate

# Translation Service (optional - will use fallback if not provided)
TRANSLATION_ENDPOINT=https://your-translation-service.com/translate
TRANSLATION_API_KEY=your_translation_api_key

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8000